- name: Install td-agent (Fluentd)
  hosts: all
  become: yes

  tasks:
    - name: Import Treasure Data GPG key
      ansible.builtin.apt_key:
        url: https://packages.treasuredata.com/GPG-KEY-td-agent
        state: present

    - name: Add Treasure Data repository to APT
      ansible.builtin.apt_repository:
        repo: deb http://packages.treasuredata.com/4/ubuntu/{{ ansible_distribution_release }}/{{ ansible_architecture }}/
        state: present
        update_cache: yes

    - name: Install td-agent
      ansible.builtin.apt:
        name: td-agent
        state: present
        update_cache: yes
